<%= form_for(@admin, html: { class: 'form-horizontal sign-up-form'}) do |f| %>
  <h2>Add Admin</h2><br />
  <div class='form-group'>
    <%= f.label :email, 'Email*', class:'col-sm-4 control-label' %>
    <div class='col-sm-8'>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email'  %>
      <%= display(@admin.errors[:email]) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :name, 'Name*', class:'col-sm-4 control-label' %>
    <div class='col-sm-8'>
      <%= f.text_field :name, class: 'form-control', :placeholder => 'Name' %>
      <%= display(@admin.errors[:name]) %>
    </div>
  </div>
  <%= f.submit 'Create Admin', class: 'btn btn-primary btn-len' %>
  <%= link_to 'Cancel', admins_path, class: 'btn btn-danger btn-len pull-right' %>
<% end %>
